$Frame Поле
$Back_picture = <255 255 255> 800 600
Show
	text [10 , 10, 100, 20, <255 255 255>, <0 0 0>, Time_now ]
	text [10 , 20, 100, 30, <255 255 255>, <0 0 0>, Робот_1.поворот ]
	text [100, 20, 100, 30, <255 255 255>, <0 0 0>, Робот_1.куда_поворот ]
	text [10 , 30, 100, 40, <255 255 255>, <0 0 0>, Робот_1.x ]
	text [100, 30, 100, 40, <255 255 255>, <0 0 0>, Робот_1.куда_x ]
	text [10 , 40, 100, 50, <255 255 255>, <0 0 0>, Робот_1.y ]
	text [100, 40, 100, 50, <255 255 255>, <0 0 0>, Робот_1.куда_y ]
	text [10 , 70, 200, 80, <255 255 255>, <0 0 0>, Робот_1.действие ]

	line [ Робот_1.x + ширина / 4 * cos((Робот_1.поворот + 45) * pi / 180),
	       Робот_1.y + высота / 4 * -sin((Робот_1.поворот + 45) * pi / 180),
		   Робот_1.x + ширина / 4 * cos((Робот_1.поворот - 45) * pi / 180),
		   Робот_1.y + высота / 4 * -sin((Робот_1.поворот - 45) * pi / 180),
		   <255 0 0> ]
	line [ Робот_1.x + ширина / 2 * cos((Робот_1.поворот + 45) * pi / 180),
	       Робот_1.y + высота / 2 * -sin((Робот_1.поворот + 45) * pi / 180),
		   Робот_1.x + ширина / 2 * cos((Робот_1.поворот - 45) * pi / 180),
		   Робот_1.y + высота / 2 * -sin((Робот_1.поворот - 45) * pi / 180),
		   <255 0 0> ]
	line [ Робот_1.x + ширина / 2 *  cos((Робот_1.поворот - 45) * pi / 180),
	       Робот_1.y + высота / 2 * -sin((Робот_1.поворот - 45) * pi / 180),
		   Робот_1.x + ширина / 2 *  cos((Робот_1.поворот - 135) * pi / 180),
		   Робот_1.y + высота / 2 * -sin((Робот_1.поворот - 135) * pi / 180),
		   <255 0 0> ]
	line [ Робот_1.x + ширина / 2 *  cos((Робот_1.поворот - 135) * pi / 180),
	       Робот_1.y + высота / 2 * -sin((Робот_1.поворот - 135) * pi / 180),
		   Робот_1.x + ширина / 2 *  cos((Робот_1.поворот - 225) * pi / 180),
		   Робот_1.y + высота / 2 * -sin((Робот_1.поворот - 225) * pi / 180),
		   <255 0 0> ]
	line [ Робот_1.x + ширина / 2 *  cos((Робот_1.поворот - 225) * pi / 180),
	       Робот_1.y + высота / 2 * -sin((Робот_1.поворот - 225) * pi / 180),
		   Робот_1.x + ширина / 2 *  cos((Робот_1.поворот - 315) * pi / 180),
		   Робот_1.y + высота / 2 * -sin((Робот_1.поворот - 315) * pi / 180),
		   <255 0 0> ]
$End
