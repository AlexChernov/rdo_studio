$Decision_point dpt1 : prior
$Condition Система.количество_прибывших_деталей <= 20
$Activities
	Поступление_детали                           : Образец_поступления_новой_детали
$End

$Decision_point dpt2 : prior
$Condition NoCheck
$Activities
	Захват_детали                                : Образец_захвата_детали_роботом                //CF = 0.5
	Транспортировка_детали                       : Образец_транспортировки_детали_роботом        //CF = 0.6
	Возврат_робота                               : Образец_возврата_робота                       //CF = 0.7
$End

$Decision_point dpt3 : prior
$Condition Как_ориентирована_деталь( _Деталь.ориентация )
$Priority 0.3
$Activities
	Ориентирование_детали_против_часовой_стрелки : Образец_ориентирования против_часовой_стрелки //CF = Как_ориентирована_деталь( _Деталь.ориентация )
$End

$Decision_point dpt4 : prior
$Condition NoCheck
$Priority 0.4
$Activities
	Ориентирование_детали_по_часовой_стрелке     : Образец_ориентирования по_часовой_стрелке     //CF = 1 - Как_ориентирована_деталь( _Деталь.ориентация )
$End
