$Decision_point Simple : some
$Condition NoCheck
$Activities
	Захват_детали                                : Образец_захвата_детали_роботом                       cf = 0
	Ориентирование_детали_против_часовой_стрелки : Образец_ориентирования_детали против_часовой_стрелки cf = (Как_ориентирована_деталь(Система.как_ориентированна_текущая_деталь) + 1)/2
	Ориентирование_детали_по_часовой_стрелке     : Образец_ориентирования_детали по_часовой_стрелке     cf = (1 - Как_ориентирована_деталь(Система.как_ориентированна_текущая_деталь))/2
	Транспортировка_детали                       : Образец_транспортировки_детали_роботом               cf = 0
	Возврат_робота                               : Образец_возврата_робота                              cf = 0
$End